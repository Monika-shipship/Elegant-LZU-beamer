    \pgfdeclareimage[height=.85\@tempdimb]{logo}{source/lzu_logo.png}%
    \pgfdeclareimage[height=.9\@tempdimb]{title_logo}{source/lzu_title.png}%
  \logo{\pgfuseimage{logo}}%
